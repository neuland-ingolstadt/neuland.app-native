    "@tanstack/react-query": "^5.51.18",
    "@tanstack/react-query-persist-client": "^5.51.18",
    "color": "^4.2.3",
    "expo": "~51.0.24",
    "expo-application": "~5.9.1",
    "expo-blur": "~13.0.2",
    "expo-brightness": "~12.0.1",
    "expo-build-properties": "~0.12.4",
